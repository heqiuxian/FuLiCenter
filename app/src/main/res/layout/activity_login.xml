<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj1">
    <include layout="@layout/item_personal_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="今夜残灯斜照处"
    android:textSize="20dp"
    android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
    android:textColor="@color/btn_green_pressed"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="荧荧，秋雨晴时泪不晴"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/btn_green_pressed"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:textSize="25sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_account"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:textSize="25sp"
            android:inputType="textPassword"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pwd"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btLogin"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@null"
        />
    <Button
        android:id="@+id/btRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="免费注册"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/holo_red_light"
        android:background="@null"
        />
</LinearLayout>

